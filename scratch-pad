docker run -p 3306:3306 -v db_data:/var/lib/mysql --name db -e MYSQL_ROOT_PASSWORD=my_db_root_password -e MYSQL_DATABASE=wordpress -e MYSQL_USER=wordpress -e MYSQL_PASSWORD=my_wordpress_db_password -d mysql:5.7

docker run -v wordpress_files:/var/www/html --name wordpress -p 80:80 -e WORDPRESS_DB_HOST=172.17.0.2:3306 -e WORDPRESS_DB_USER=wordpress -e WORDPRESS_DB_PASSWORD=my_wordpress_db_password -d wordpress:latest

docker swarm init --default-addr-pool 172.19.0.0/24 --advertise-addr 192.168.1.200  
